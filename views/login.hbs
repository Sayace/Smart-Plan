<h2 class="cover-heading">Login</h2>
{{#if message}}
<div class="error">{{ message }}</div>
{{/if}}

<div class="lead">
  <form method="POST" action="login">
    <div id="errorLog"></div>
  	<div>
  		<label for="username">Username:</label>
  		<input id="logUsername" type="text" name="username" value="" required>
  	</div>
  	<div>
  		<label for="password">Password:</label>
  		<input id="logPassword" type="password" name="password" value="" required>
  	</div>
  	<div>
  		<input  id="loggin" class="btn btn-lg btn-default" type="submit" value="Login">
  	</div>
  </form>
</div>
